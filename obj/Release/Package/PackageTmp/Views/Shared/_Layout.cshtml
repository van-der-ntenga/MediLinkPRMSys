<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MediLink Portal</title>
    <link rel="stylesheet" href="~/Content/css/site.css" />


    <link rel="icon" href="~/favicon_1.ico">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.6/lottie.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <!-- Add 'loading' class here to show loader -->
    <header>
        <h1>MediLink Portal</h1>
    </header>

    <!-- Sidebar Markup -->
    @if (ViewBag.ShowSidebar != null && ViewBag.ShowSidebar)
    {
        @Html.Partial("_Sidebar")
    }

    <!-- Menu Markup -->
    @if (ViewBag.ShowMenu != null && ViewBag.ShowMenu)
    {
        @Html.Partial("_Menu")
    }

    @if (ViewBag.ShowPatientTable != null && ViewBag.ShowPatientTable)
    {
        @Html.Partial("_PatientTable")
    }

    @if (ViewBag.ShowMainMenu != null && ViewBag.ShowMainMenu)
    {
        @Html.Partial("_MainMenu")
    }

    <div class="container" id="main">
        @RenderBody() <!-- This is where your main content will be rendered -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    
</body>
</html>

<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.7/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.7/jquery.validate.unobtrusive.min.js"></script>
