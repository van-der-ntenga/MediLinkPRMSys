@model MediLinkCB.Models.Appointment

@{
    ViewBag.Title = "Details";
    ViewBag.ShowMenu = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Appointment Details</h4>
    <hr />

    <div class="form-horizontal">
        <div class="form-row">
            <div class="form-group half-width">
                @Html.Label("EmailAddress", "Email Address")
                @Html.DisplayFor(model => model.EmailAddress)
            </div>
            <div class="form-group half-width">
                @Html.Label("AppointmentDateTime", "Appointment Date")
                @Html.DisplayFor(model => model.AppointmentDateTime)
            </div>
        </div>

        <div class="form-row">
            <div class="form-group half-width">
                @Html.Label("AppointmentReason", "Appointment Reason")
                @Html.DisplayFor(model => model.AppointmentReason)
            </div>
            <div class="form-group half-width">
                @Html.Label("DoctorOrNurse", "Booked By")
                @Html.DisplayFor(model => model.UserProfile.UserName)
            </div>
        </div>

        <div class="form-row">
            <div class="form-group half-width">
                @Html.Label("PatientName", "Patient Name")
                @Html.DisplayFor(model => model.Patient.PatientName)
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AppointmentID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
