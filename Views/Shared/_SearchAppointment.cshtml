@using (Html.BeginForm("Index", "Appointments", FormMethod.Get))
{
    <div class="form-group">
        @Html.Label("Search by SA ID/Passport Number:")
        @Html.TextBox("searchPatientID", null, new { @class = "form-control", placeholder = "Enter SA ID/Passport Number" })
    </div>
    <button type="submit" class="btn btn-primary registerbtn">Search</button>
}

<style>
    /* Style for smaller and narrower button */
    .btn.small-btn {
        padding: 5px 10px !important;
        font-size: 14px !important;
        width: auto !important; /* Auto width based on content */
        min-width: 80px; /* Minimum width */
        border-radius: 12px !important;
    }
</style>
